{
  "suggest.noselect": false,
  "languageserver": {
    "golang": {
      "command": "~/.go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "go",
    "css",
    "markdown",
    "javascript",
    "typescript",
    "json",
    "javascriptreact",
    "typescriptreact"
  ],
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.arrowParens": "avoid"
}
